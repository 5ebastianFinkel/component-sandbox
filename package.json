{
  "name": "component-sandbox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:vue": "npm run dev -w @component-sandbox/vue-ui",
    "dev:react": "npm run dev -w @component-sandbox/react-ui",
    "build:vue": "npm run build -w @component-sandbox/vue-ui",
    "build:react": "npm run build -w @component-sandbox/react-ui",
    "build:all": "npm run build:vue && npm run build:react",
    "storybook:vue": "npm run storybook -w @component-sandbox/vue-ui",
    "storybook:react": "npm run storybook -w @component-sandbox/react-ui",
    "install:all": "npm install --workspaces",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-a11y": "^9.0.16",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-onboarding": "^9.0.16",
    "@storybook/addon-vitest": "^9.0.16",
    "@storybook/react-vite": "^9.0.18",
    "@storybook/testing-library": "^0.2.2",
    "@types/node": "^24.0.14",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "happy-dom": "^18.0.1",
    "playwright": "^1.54.1",
    "sass": "^1.89.2",
    "storybook": "^9.0.18",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
